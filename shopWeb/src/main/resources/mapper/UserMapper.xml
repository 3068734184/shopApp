<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shopweb.mapper.UserMapper">
<!--    模糊查询-->
    <select id="fuzzySelectUser" resultType="com.example.shopmodel.model.User">
        select *
        from user
        <where>
            <if test="username != null and username != ''">
                and username like concat('%',#{username},'%')
            </if>
            <if test="tel != null and tel != ''">
                and tel like concat('%',#{tel},'%')
            </if>
            <if test="email != null and email != ''">
                and email like concat('%',#{email},'%')
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>;
    </select>

<!--    唯一查询-->
    <select id="uniqueSelectUser" resultType="com.example.shopmodel.model.UserQuery">
        select *
        from user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="tel != null and tel != ''">
                and tel = #{tel}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>;
    </select>
</mapper>
